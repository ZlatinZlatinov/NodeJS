<h1>Delete Cube</h1>
<div class="form">
    <form action="/delete/{{cube._id}}" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{cube.name}}" disabled="true" />
        <label for="description">Description</label>
        <textarea id="description" name="description" disabled="true" />{{cube.description}}</textarea>
        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imgUrl" value="{{cube.imgUrl}}" disabled="true" />
        <label for="difficulty">Difficulty</label>
        <select id="difficulty" name="difficultyLevel" value="" disabled="true" />
        {{#each optionsArr}}
        <option value="{{lvl}}" {{#if selected}} selected="true"{{/if}}>{{msg}}</option> 
        {{/each}}
        </select>
        <input type="submit" value="Delete">
    </form>
</div>