{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{msg}}</p>
        {{/each}}
    </div>
</div>
{{/if}}

<div class="register-box">
    <h1>Register</h1>
    <h4>It's free and only take a minute</h4>
    <form action="/register" method="post">
        <label>Username</label>
        <input type="text" name="username" placeholder="Username.." {{#if userName}}value="{{userName}}"{{/if}}>
        <label>Email</label>
        <input type="text" name="email" placeholder="Email.." {{#if email}}value="{{email}}"{{/if}}>
        <label>Password</label>
        <input type="password" name="password" placeholder="Password.." {{#if password}}value="{{password}}"{{/if}}>
        <label>Confirm Password</label>
        <input type="password" name="rePass" placeholder="Confirm Password.." {{#if rePass}}value="{{rePass}}"{{/if}}>
        <input type="submit" value="Submit">
    </form>
    <p>Already have an account? <a href="/login">Login here</a></p>
</div>